<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notifications - Quizzie</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg: #F1F6F9;
            --primary: #14274E;
            --secondary: #394867;
            --muted: #9BA4B4;
            --white: #ffffff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg);
            color: var(--primary);
            min-height: 100vh;
            min-height: 100dvh;
            display: flex;
            flex-direction: column;
            overflow-x: hidden;
        }

        /* === HEADER === */
        .header {
            background: var(--white);
            border-bottom: 1px solid rgba(155, 164, 180, 0.2);
            padding: 0.75rem 0;
            position: sticky;
            top: 0;
            z-index: 100;
            box-shadow: 0 2px 12px rgba(20, 39, 78, 0.04);
        }

        .header-content {
            max-width: 1300px;
            margin: 0 auto;
            padding: 0 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: 800;
            color: var(--primary);
            letter-spacing: -0.5px;
        }

        .nav-links {
            list-style: none;
            display: flex;
            gap: 0.5rem;
        }

        .nav-links a {
            text-decoration: none;
            color: var(--muted);
            font-weight: 500;
            font-size: 0.85rem;
            padding: 0.5rem 1rem;
            border-radius: 10px;
            transition: all 0.2s;
            cursor: pointer;
        }

        .nav-links a:hover {
            color: var(--primary);
            background: var(--bg);
        }

        .nav-links a.active {
            color: var(--primary);
            background: var(--bg);
            font-weight: 600;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .header-icon {
            width: 38px;
            height: 38px;
            border-radius: 12px;
            border: none;
            background: var(--bg);
            color: var(--secondary);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s;
        }

        .header-icon:hover {
            background: #e2e8f0;
            color: var(--primary);
        }

        .kohert-btn {
            background: linear-gradient(135deg, #14274E 0%, #394867 100%);
            color: white !important;
            padding: 0.5rem 1.25rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 0.9rem;
            text-decoration: none;
            box-shadow: 0 4px 12px rgba(20, 39, 78, 0.2);
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .kohert-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(20, 39, 78, 0.3);
            background: linear-gradient(135deg, #1f3a6e 0%, #4b5d85 100%);
        }

        .header-profile {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #394867 0%, #14274E 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 0.9rem;
            text-decoration: none;
            margin-left: 0.5rem;
            border: 2px solid #F1F6F9;
            box-shadow: 0 2px 8px rgba(20, 39, 78, 0.15);
            transition: all 0.2s;
        }

        .header-profile:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 12px rgba(20, 39, 78, 0.25);
        }

        /* === NOTIFICATIONS === */
        .main-content {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
            flex: 1;
            width: 100%;
        }

        .page-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .notif-card {
            background: var(--white);
            border-radius: 16px;
            padding: 1.25rem 1.5rem;
            margin-bottom: 0.75rem;
            box-shadow: 0 2px 8px rgba(20, 39, 78, 0.04);
            border: 1px solid rgba(155, 164, 180, 0.12);
            display: flex;
            align-items: flex-start;
            gap: 1rem;
            transition: all 0.2s;
            cursor: pointer;
        }

        .notif-card:hover {
            box-shadow: 0 4px 16px rgba(20, 39, 78, 0.08);
            transform: translateY(-1px);
        }

        .notif-card.unread {
            border-left: 3px solid var(--primary);
        }

        .notif-icon {
            width: 42px;
            height: 42px;
            min-width: 42px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .notif-icon.quiz {
            background: #dbeafe;
            color: #2563eb;
        }

        .notif-icon.class {
            background: #d1fae5;
            color: #059669;
        }

        .notif-icon.grade {
            background: #fef3c7;
            color: #d97706;
        }

        .notif-icon.system {
            background: #f3e8ff;
            color: #7c3aed;
        }

        .notif-icon.join {
            background: #e0f2fe;
            color: #0284c7;
        }

        .notif-body {
            flex: 1;
        }

        .notif-title {
            font-weight: 600;
            font-size: 0.9rem;
            color: var(--primary);
            margin-bottom: 0.25rem;
        }

        .notif-desc {
            font-size: 0.82rem;
            color: var(--muted);
            line-height: 1.5;
        }

        .notif-time {
            font-size: 0.75rem;
            color: var(--muted);
            margin-top: 0.35rem;
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

        .notif-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: var(--primary);
            flex-shrink: 0;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: var(--white);
            border-radius: 20px;
            border: 1px solid rgba(155, 164, 180, 0.12);
        }

        .empty-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: var(--bg);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            color: var(--muted);
        }

        .empty-state h3 {
            font-size: 1.15rem;
            color: var(--primary);
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: var(--muted);
            font-size: 0.9rem;
        }

        /* === FOOTER === */
        .footer {
            background: var(--white);
            border-top: 1px solid rgba(155, 164, 180, 0.2);
            padding: 1.5rem 0;
            margin-top: auto;
            flex-shrink: 0;
        }

        .footer-content {
            max-width: 1300px;
            margin: 0 auto;
            padding: 0 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.825rem;
            color: var(--muted);
        }

        .footer-link {
            color: var(--secondary);
            text-decoration: none;
            font-weight: 500;
        }

        .footer-link:hover {
            color: var(--primary);
        }

        /* === HAMBURGER MENU === */
        .hamburger-btn {
            display: none;
            width: 38px;
            height: 38px;
            border-radius: 10px;
            background: var(--bg);
            border: none;
            color: var(--secondary);
            cursor: pointer;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .hamburger-btn:hover {
            background: #e2e8f0;
            color: var(--primary);
        }

        .mobile-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(20, 39, 78, 0.4);
            backdrop-filter: blur(2px);
            z-index: 998;
        }

        .mobile-overlay.open {
            display: block;
        }

        .mobile-nav {
            position: fixed;
            top: 0;
            right: -65%;
            width: 65%;
            max-width: 300px;
            height: 100%;
            background: var(--white);
            z-index: 999;
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
            box-shadow: -4px 0 24px rgba(20, 39, 78, 0.15);
            transition: right 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            overflow-y: auto;
        }

        .mobile-nav.open {
            right: 0;
        }

        .mobile-nav-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.25rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px solid rgba(155, 164, 180, 0.15);
        }

        .mobile-nav-header .logo {
            font-size: 1.3rem;
        }

        .mobile-nav-close {
            width: 34px;
            height: 34px;
            border-radius: 10px;
            background: var(--bg);
            border: none;
            color: var(--secondary);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .mobile-nav-close:hover {
            background: #fee2e2;
            color: #ef4444;
        }

        .mobile-nav a {
            text-decoration: none;
            color: var(--secondary);
            font-weight: 500;
            font-size: 0.95rem;
            padding: 0.75rem 1rem;
            border-radius: 12px;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            gap: 0.6rem;
        }

        .mobile-nav a:hover,
        .mobile-nav a.active {
            color: var(--primary);
            background: var(--bg);
            font-weight: 600;
        }

        .mobile-nav-divider {
            height: 1px;
            background: rgba(155, 164, 180, 0.15);
            margin: 0.5rem 0;
        }

        .mobile-kohert {
            display: none;
        }

        @media (max-width: 768px) {
            .header-content {
                flex-direction: row;
                flex-wrap: nowrap;
            }

            .header-content nav {
                display: none;
            }

            .header-right .kohert-btn:not(.mobile-kohert),
            .header-right .header-profile,
            .header-right .header-icon {
                display: none;
            }

            .hamburger-btn {
                display: flex;
            }

            .header-right .mobile-kohert {
                display: inline-flex;
            }

            .main-content {
                padding: 1.25rem 1rem;
            }

            .page-title {
                font-size: 1.25rem;
            }

            .notif-card {
                padding: 1rem 1.15rem;
            }

            .footer-content {
                flex-direction: column;
                gap: 0.5rem;
                text-align: center;
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(12px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .notif-card {
            animation: fadeInUp 0.4s ease-out both;
        }

        .notif-card:nth-child(2) {
            animation-delay: 0.05s;
        }

        .notif-card:nth-child(3) {
            animation-delay: 0.1s;
        }

        .notif-card:nth-child(4) {
            animation-delay: 0.15s;
        }

        .notif-card:nth-child(5) {
            animation-delay: 0.2s;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <header class="header">
        <div class="header-content">
            <div class="logo">Quizzie</div>
            <nav>
                <ul class="nav-links">
                    {{#if (eq userType 'teacher')}}
                    <li><a href="/homeTeacher">Dashboard</a></li>
                    <li><a href="/teacher/classes">My Classes</a></li>
                    <li><a href="/profileTeacher">My Profile</a></li>
                    {{else}}
                    <li><a href="/homeStudent">Dashboard</a></li>
                    <li><a href="/myClasses">My Classes</a></li>
                    <li><a href="/profileStudent">My Profile</a></li>
                    {{/if}}
                </ul>
            </nav>
            <div class="header-right">
                {{#if (eq userType 'student')}}
                <a href="/comingSoon" class="kohert-btn" title="Kohert">Kohert</a>
                <a href="/comingSoon" class="kohert-btn mobile-kohert" title="Kohert">Kohert</a>
                {{/if}}
                <button class="header-icon" title="Notifications"><i data-lucide="bell"
                        style="width:18px;height:18px"></i></button>
                <button class="hamburger-btn" onclick="toggleMobileNav()" title="Menu" id="hamburgerBtn">
                    <i data-lucide="menu" style="width:20px;height:20px"></i>
                </button>
                {{#if (eq userType 'teacher')}}
                <a href="/profileTeacher" class="header-profile" title="My Profile">
                    {{else}}
                    <a href="/profileStudent" class="header-profile" title="My Profile">
                        {{/if}}
                        <span class="profile-initials">SK</span>
                    </a>
            </div>
        </div>
    </header>

    <!-- Mobile Overlay -->
    <div class="mobile-overlay" id="mobileOverlay" onclick="closeMobileNav()"></div>

    <!-- Mobile Side Drawer -->
    <div class="mobile-nav" id="mobileNav">
        <div class="mobile-nav-header">
            <div class="logo">Quizzie</div>
            <button class="mobile-nav-close" onclick="closeMobileNav()">
                <i data-lucide="x" style="width:18px;height:18px"></i>
            </button>
        </div>
        {{#if (eq userType 'teacher')}}
        <a href="/homeTeacher"><i data-lucide="layout-dashboard" style="width:18px;height:18px"></i> Dashboard</a>
        <a href="/teacher/classes"><i data-lucide="library" style="width:18px;height:18px"></i> My Classes</a>
        <a href="/profileTeacher"><i data-lucide="user" style="width:18px;height:18px"></i> My Profile</a>
        {{else}}
        <a href="/homeStudent"><i data-lucide="layout-dashboard" style="width:18px;height:18px"></i> Dashboard</a>
        <a href="/myClasses"><i data-lucide="book-open" style="width:18px;height:18px"></i> My Classes</a>
        <a href="/profileStudent"><i data-lucide="user" style="width:18px;height:18px"></i> My Profile</a>
        {{/if}}
        <div class="mobile-nav-divider"></div>
        <a href="/notifications" class="active"><i data-lucide="bell" style="width:18px;height:18px"></i>
            Notifications</a>
    </div>

    <!-- Main Content -->
    <main class="main-content">
        <h1 class="page-title"><i data-lucide="bell" style="width:24px;height:24px"></i> Notifications</h1>

        <div id="notifContainer">
            <!-- Notifications loaded by JS -->
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div>&copy; 2025 All rights reserved by www.Quizzie.in</div>
            <div><a href="/about-developers" class="footer-link">Meet Our Developers</a></div>
        </div>
    </footer>

    <script>
        const studentName = '{{{userName}}}';

        document.addEventListener('DOMContentLoaded', function () {
            lucide.createIcons();
            setProfileInitials();
            loadNotifications();
        });

        function setProfileInitials() {
            const name = studentName || 'Student';
            const initials = name.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase();
            document.querySelectorAll('.profile-initials').forEach(el => el.textContent = initials);
        }

        function toggleMobileNav() {
            document.getElementById('mobileNav').classList.add('open');
            document.getElementById('mobileOverlay').classList.add('open');
            document.body.style.overflow = 'hidden';
            lucide.createIcons();
        }

        function closeMobileNav() {
            document.getElementById('mobileNav').classList.remove('open');
            document.getElementById('mobileOverlay').classList.remove('open');
            document.body.style.overflow = '';
        }

        async function loadNotifications() {
            const container = document.getElementById('notifContainer');
            try {
                const response = await fetch('/api/student/notifications');
                const data = await response.json();

                if (data.success && data.notifications && data.notifications.length > 0) {
                    container.innerHTML = data.notifications.map((n, i) => {
                        const iconType = n.type || 'system';
                        const iconName = {
                            quiz: 'file-text',
                            class: 'book-open',
                            grade: 'award',
                            system: 'info',
                            join: 'user-plus'
                        }[iconType] || 'info';
                        const timeAgo = getTimeAgo(n.createdAt);
                        return `
                            <div class="notif-card ${n.read ? '' : 'unread'}">
                                <div class="notif-icon ${iconType}">
                                    <i data-lucide="${iconName}" style="width:20px;height:20px"></i>
                                </div>
                                <div class="notif-body">
                                    <div class="notif-title">${n.title}</div>
                                    <div class="notif-desc">${n.message}</div>
                                    <div class="notif-time">
                                        <i data-lucide="clock" style="width:12px;height:12px"></i> ${timeAgo}
                                    </div>
                                </div>
                                ${!n.read ? '<div class="notif-dot"></div>' : ''}
                            </div>
                        `;
                    }).join('');
                    lucide.createIcons();
                } else {
                    showEmptyState();
                }
            } catch (error) {
                showEmptyState();
            }
        }

        function showEmptyState() {
            document.getElementById('notifContainer').innerHTML = `
                <div class="empty-state">
                    <div class="empty-icon">
                        <i data-lucide="bell-off" style="width:36px;height:36px"></i>
                    </div>
                    <h3>No Notifications Yet</h3>
                    <p>You're all caught up! We'll notify you when something important happens.</p>
                </div>
            `;
            lucide.createIcons();
        }

        function getTimeAgo(dateStr) {
            if (!dateStr) return '';
            const date = new Date(dateStr);
            const now = new Date();
            const diff = Math.floor((now - date) / 1000);
            if (diff < 60) return 'Just now';
            if (diff < 3600) return Math.floor(diff / 60) + 'm ago';
            if (diff < 86400) return Math.floor(diff / 3600) + 'h ago';
            if (diff < 604800) return Math.floor(diff / 86400) + 'd ago';
            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
        }
    </script>
</body>

</html>