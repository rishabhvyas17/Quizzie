<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Classes - Quizzie</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg: #F1F6F9;
            --primary: #14274E;
            --secondary: #394867;
            --muted: #9BA4B4;
            --white: #ffffff;
            --card-radius: 20px;
            --card-shadow: 0 2px 12px rgba(20, 39, 78, 0.06);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg);
            color: var(--primary);
            min-height: 100vh;
            min-height: 100dvh;
            display: flex;
            flex-direction: column;
            overflow-x: hidden;
        }

        /* === HEADER === */
        .header {
            background: var(--white);
            border-bottom: 1px solid rgba(155, 164, 180, 0.2);
            padding: 0.75rem 0;
            position: sticky;
            top: 0;
            z-index: 100;
            box-shadow: 0 2px 12px rgba(20, 39, 78, 0.04);
        }

        .header-content {
            max-width: 1300px;
            margin: 0 auto;
            padding: 0 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: 800;
            color: var(--primary);
            letter-spacing: -0.5px;
        }

        .nav-links {
            list-style: none;
            display: flex;
            gap: 0.5rem;
        }

        .nav-links a {
            text-decoration: none;
            color: var(--muted);
            font-weight: 500;
            font-size: 0.85rem;
            padding: 0.5rem 1rem;
            border-radius: 10px;
            transition: all 0.2s;
            cursor: pointer;
        }

        .nav-links a:hover {
            color: var(--primary);
            background: var(--bg);
        }

        .nav-links a.active {
            color: var(--primary);
            background: var(--bg);
            font-weight: 600;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .header-icon {
            width: 38px;
            height: 38px;
            border-radius: 12px;
            border: none;
            background: var(--bg);
            color: var(--secondary);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s;
        }

        .header-icon:hover {
            background: #e2e8f0;
            color: var(--primary);
        }

        .kohert-btn {
            background: linear-gradient(135deg, #14274E 0%, #394867 100%);
            color: white !important;
            padding: 0.5rem 1.25rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 0.9rem;
            text-decoration: none;
            box-shadow: 0 4px 12px rgba(20, 39, 78, 0.2);
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .kohert-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(20, 39, 78, 0.3);
            background: linear-gradient(135deg, #1f3a6e 0%, #4b5d85 100%);
        }

        .header-profile {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #394867 0%, #14274E 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 0.9rem;
            text-decoration: none;
            margin-left: 0.75rem;
            border: 2px solid #F1F6F9;
            box-shadow: 0 2px 8px rgba(20, 39, 78, 0.15);
            transition: all 0.2s;
        }

        .header-profile:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 12px rgba(20, 39, 78, 0.25);
        }

        /* === MAIN === */
        .main-content {
            max-width: 1300px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
            flex: 1;
            width: 100%;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .page-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--primary);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .class-count {
            font-size: 0.85rem;
            color: var(--muted);
            background: var(--white);
            padding: 0.3rem 0.75rem;
            border-radius: 8px;
            font-weight: 500;
        }

        .join-btn {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: var(--primary);
            color: white;
            border: none;
            padding: 0.7rem 1.25rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 0.85rem;
            cursor: pointer;
            transition: all 0.25s;
            box-shadow: 0 2px 8px rgba(20, 39, 78, 0.15);
        }

        .join-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(20, 39, 78, 0.25);
            background: var(--secondary);
        }

        /* === CLASSES GRID === */
        .classes-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
            gap: 1.25rem;
        }

        .class-card {
            background: var(--white);
            border-radius: var(--card-radius);
            padding: 1.5rem;
            box-shadow: var(--card-shadow);
            border: 1px solid rgba(155, 164, 180, 0.15);
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .class-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 32px rgba(20, 39, 78, 0.12);
            border-color: rgba(20, 39, 78, 0.15);
        }

        .class-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            border-radius: 20px 20px 0 0;
            opacity: 0;
            transition: opacity 0.3s;
        }

        .class-card:hover::before {
            opacity: 1;
        }

        .card-top {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            margin-bottom: 1rem;
        }

        .card-subject-icon {
            width: 48px;
            height: 48px;
            border-radius: 14px;
            background: var(--bg);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
        }

        .card-subject-badge {
            font-size: 0.7rem;
            color: var(--muted);
            background: var(--bg);
            padding: 0.25rem 0.6rem;
            border-radius: 6px;
            font-weight: 500;
        }

        .card-subject {
            font-size: 1.1rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 0.25rem;
        }

        .card-classname {
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--secondary);
            margin-bottom: 0.35rem;
        }

        .card-teacher {
            font-size: 0.8rem;
            color: var(--muted);
            display: flex;
            align-items: center;
            gap: 0.35rem;
            margin-bottom: 1rem;
        }

        .card-stats {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 0.5rem;
            padding: 0.85rem;
            background: var(--bg);
            border-radius: 12px;
            margin-bottom: 1rem;
        }

        .stat-item {
            text-align: center;
        }

        .stat-value {
            font-size: 1.1rem;
            font-weight: 700;
            color: var(--primary);
            display: block;
        }

        .stat-label {
            font-size: 0.65rem;
            color: var(--muted);
            text-transform: uppercase;
            letter-spacing: 0.3px;
        }

        .card-progress {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .progress-track {
            flex: 1;
            height: 6px;
            background: var(--bg);
            border-radius: 3px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            border-radius: 3px;
            transition: width 0.6s ease;
        }

        .progress-fill.green {
            background: #10b981;
        }

        .progress-fill.yellow {
            background: #f59e0b;
        }

        .progress-fill.red {
            background: #ef4444;
        }

        .progress-value {
            font-size: 0.8rem;
            font-weight: 600;
            color: var(--primary);
            min-width: 36px;
            text-align: right;
        }

        .card-action {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .go-btn {
            display: flex;
            align-items: center;
            gap: 0.4rem;
            background: var(--bg);
            color: var(--primary);
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.8rem;
            cursor: pointer;
            transition: all 0.2s;
        }

        .go-btn:hover {
            background: var(--primary);
            color: white;
        }

        .card-date {
            font-size: 0.7rem;
            color: var(--muted);
        }

        /* === EMPTY STATE === */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
        }

        .empty-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: var(--bg);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            color: var(--muted);
        }

        .empty-state h3 {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: var(--muted);
            font-size: 0.9rem;
            margin-bottom: 1.5rem;
        }

        /* === LOADING === */
        .loading {
            text-align: center;
            padding: 3rem;
            color: var(--muted);
        }

        .loading-spinner {
            border: 3px solid var(--bg);
            border-top: 3px solid var(--primary);
            border-radius: 50%;
            width: 36px;
            height: 36px;
            animation: spin 0.8s linear infinite;
            margin: 0 auto 0.75rem;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg)
            }

            100% {
                transform: rotate(360deg)
            }
        }

        /* === MODAL === */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(20, 39, 78, 0.5);
            backdrop-filter: blur(8px);
            z-index: 500;
            justify-content: center;
            align-items: center;
        }

        .modal.show {
            display: flex;
        }

        .modal-content {
            background: var(--white);
            border-radius: 24px;
            width: 90%;
            max-width: 480px;
            padding: 2rem;
            box-shadow: 0 24px 64px rgba(20, 39, 78, 0.2);
            animation: modalIn 0.3s ease;
        }

        @keyframes modalIn {
            from {
                opacity: 0;
                transform: scale(0.95) translateY(10px);
            }

            to {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .modal-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--primary);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .close-btn {
            background: var(--bg);
            border: none;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            font-size: 1.25rem;
            color: var(--muted);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .close-btn:hover {
            background: #fee2e2;
            color: #ef4444;
        }

        .form-label {
            display: block;
            font-size: 0.85rem;
            font-weight: 600;
            color: var(--primary);
            margin-bottom: 0.5rem;
        }

        .form-input {
            width: 100%;
            padding: 0.85rem 1rem;
            border: 2px solid rgba(155, 164, 180, 0.3);
            border-radius: 14px;
            font-size: 1rem;
            font-family: 'Inter', sans-serif;
            transition: all 0.2s;
            background: var(--bg);
            color: var(--primary);
        }

        .form-input:focus {
            outline: none;
            border-color: var(--primary);
            background: white;
            box-shadow: 0 0 0 4px rgba(20, 39, 78, 0.08);
        }

        .btn {
            background: var(--primary);
            color: white;
            border: none;
            padding: 0.6rem 1.25rem;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.25s;
            font-size: 0.8rem;
            text-align: center;
            box-shadow: 0 2px 8px rgba(20, 39, 78, 0.15);
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(20, 39, 78, 0.25);
            background: var(--secondary);
        }

        .btn-secondary {
            background: var(--bg);
            color: var(--primary);
            box-shadow: none;
        }

        .btn-secondary:hover {
            background: #e2e8f0;
        }

        .btn-success {
            background: #10b981;
        }

        .btn-success:hover {
            background: #059669;
        }

        .class-preview-stats {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 0.75rem;
            padding: 1rem;
            background: var(--bg);
            border-radius: 14px;
            margin: 1rem 0;
        }

        .preview-stat {
            text-align: center;
        }

        .preview-stat-value {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--primary);
        }

        .preview-stat-label {
            font-size: 0.7rem;
            color: var(--muted);
        }

        /* === FOOTER === */
        .footer {
            background: var(--white);
            border-top: 1px solid rgba(155, 164, 180, 0.2);
            padding: 1.5rem 0;
            flex-shrink: 0;
        }

        .footer-content {
            max-width: 1300px;
            margin: 0 auto;
            padding: 0 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.825rem;
            color: var(--muted);
        }

        .footer-link {
            color: var(--secondary);
            text-decoration: none;
            font-weight: 500;
        }

        .footer-link:hover {
            color: var(--primary);
        }

        /* === ALERT === */
        .alert {
            padding: 1rem 1.25rem;
            border-radius: 12px;
            font-size: 0.85rem;
        }

        .alert-success {
            background: #d1fae5;
            color: #065f46;
            border: 1px solid #6ee7b7;
        }

        .alert-error {
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fca5a5;
        }

        /* === HAMBURGER MENU === */
        .hamburger-btn {
            display: none;
            width: 38px;
            height: 38px;
            border-radius: 10px;
            background: var(--bg);
            border: none;
            color: var(--secondary);
            cursor: pointer;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .hamburger-btn:hover {
            background: #e2e8f0;
            color: var(--primary);
        }

        .mobile-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(20, 39, 78, 0.4);
            backdrop-filter: blur(2px);
            z-index: 998;
        }

        .mobile-overlay.open {
            display: block;
        }

        .mobile-nav {
            position: fixed;
            top: 0;
            right: -65%;
            width: 65%;
            max-width: 300px;
            height: 100%;
            background: var(--white);
            z-index: 999;
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
            box-shadow: -4px 0 24px rgba(20, 39, 78, 0.15);
            transition: right 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            overflow-y: auto;
        }

        .mobile-nav.open {
            right: 0;
        }

        .mobile-nav-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.25rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px solid rgba(155, 164, 180, 0.15);
        }

        .mobile-nav-header .logo {
            font-size: 1.3rem;
        }

        .mobile-nav-close {
            width: 34px;
            height: 34px;
            border-radius: 10px;
            background: var(--bg);
            border: none;
            color: var(--secondary);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .mobile-nav-close:hover {
            background: #fee2e2;
            color: #ef4444;
        }

        .mobile-nav a {
            text-decoration: none;
            color: var(--secondary);
            font-weight: 500;
            font-size: 0.95rem;
            padding: 0.75rem 1rem;
            border-radius: 12px;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            gap: 0.6rem;
        }

        .mobile-nav a:hover,
        .mobile-nav a.active {
            color: var(--primary);
            background: var(--bg);
            font-weight: 600;
        }

        .mobile-nav-divider {
            height: 1px;
            background: rgba(155, 164, 180, 0.15);
            margin: 0.5rem 0;
        }

        .mobile-nav-bottom {
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid rgba(155, 164, 180, 0.15);
        }

        .mobile-nav .drawer-kohert {
            background: linear-gradient(135deg, #14274E 0%, #394867 100%) !important;
            color: white !important;
            padding: 0.65rem 1.25rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 0.9rem;
            text-decoration: none;
            box-shadow: 0 4px 12px rgba(20, 39, 78, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .mobile-nav .drawer-kohert:hover {
            background: linear-gradient(135deg, #1f3a6e 0%, #4b5d85 100%) !important;
        }

        .notification-toast {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%) translateY(100px);
            background: var(--primary);
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 12px;
            font-size: 0.85rem;
            font-weight: 500;
            z-index: 1001;
            box-shadow: 0 4px 20px rgba(20, 39, 78, 0.3);
            transition: transform 0.3s ease;
            white-space: nowrap;
        }

        .notification-toast.show {
            transform: translateX(-50%) translateY(0);
        }

        .mobile-kohert {
            display: none;
        }

        /* === RESPONSIVE === */
        @media(max-width:768px) {
            .header-content {
                flex-direction: row;
                flex-wrap: nowrap;
            }

            .header-content nav {
                display: none;
            }

            .header-right .kohert-btn:not(.mobile-kohert),
            .header-right .header-profile,
            .header-right .header-icon {
                display: none;
            }

            .hamburger-btn {
                display: flex;
            }

            .header-right .mobile-kohert {
                display: inline-flex;
            }

            .page-header {
                flex-direction: column;
                gap: 1rem;
                align-items: flex-start;
            }

            .classes-grid {
                grid-template-columns: 1fr;
            }

            .footer-content {
                flex-direction: column;
                gap: 0.5rem;
                text-align: center;
            }

            .modal-content {
                width: 95%;
                padding: 1.5rem;
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(15px)
            }

            to {
                opacity: 1;
                transform: translateY(0)
            }
        }

        .class-card {
            animation: fadeInUp 0.5s ease-out both;
        }

        .class-card:nth-child(2) {
            animation-delay: 0.05s;
        }

        .class-card:nth-child(3) {
            animation-delay: 0.1s;
        }

        .class-card:nth-child(4) {
            animation-delay: 0.15s;
        }

        .class-card:nth-child(5) {
            animation-delay: 0.2s;
        }

        .class-card:nth-child(6) {
            animation-delay: 0.25s;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <header class="header">
        <div class="header-content">
            <div class="logo">Quizzie</div>
            <nav>
                <ul class="nav-links">
                    <li><a href="/homeStudent">Dashboard</a></li>
                    <li><a class="active">My Classes</a></li>
                    <li><a href="/profileStudent">My Profile</a></li>
                </ul>
            </nav>
            <div class="header-right">
                <a href="/comingSoon" class="kohert-btn" title="Kohert">Kohert</a>
                <a href="/comingSoon" class="kohert-btn mobile-kohert" title="Kohert">Kohert</a>
                <button class="header-icon" title="Notifications"><i data-lucide="bell"
                        style="width:18px;height:18px"></i></button>
                <button class="hamburger-btn" onclick="toggleMobileNav()" title="Menu" id="hamburgerBtn">
                    <i data-lucide="menu" style="width:20px;height:20px"></i>
                </button>
                <a href="/profileStudent" class="header-profile" title="My Profile">
                    <span class="profile-initials">SK</span>
                </a>
            </div>
        </div>
    </header>

    <!-- Mobile Overlay -->
    <div class="mobile-overlay" id="mobileOverlay" onclick="closeMobileNav()"></div>

    <!-- Mobile Side Drawer -->
    <div class="mobile-nav" id="mobileNav">
        <div class="mobile-nav-header">
            <div class="logo">Quizzie</div>
            <button class="mobile-nav-close" onclick="closeMobileNav()">
                <i data-lucide="x" style="width:18px;height:18px"></i>
            </button>
        </div>
        <a href="/homeStudent"><i data-lucide="layout-dashboard" style="width:18px;height:18px"></i> Dashboard</a>
        <a href="/myClasses" class="active"><i data-lucide="book-open" style="width:18px;height:18px"></i> My
            Classes</a>
        <a href="/profileStudent"><i data-lucide="user" style="width:18px;height:18px"></i> My Profile</a>
        <div class="mobile-nav-divider"></div>
        <a href="/notifications"><i data-lucide="bell" style="width:18px;height:18px"></i> Notifications</a>
    </div>

    <!-- Main Content -->
    <main class="main-content">
        <div class="page-header">
            <div>
                <h1 class="page-title"><i data-lucide="library" style="width:28px;height:28px"></i> My Classes</h1>
            </div>
            <button class="join-btn" onclick="showJoinClassModal()">
                <i data-lucide="plus" style="width:18px;height:18px"></i> Join New Class
            </button>
        </div>

        <div id="classesContainer">
            <div class="loading">
                <div class="loading-spinner"></div>
                <p>Loading your classes...</p>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div>&copy; 2025 All rights reserved by www.Quizzie.in</div>
            <div><a href="/about-developers" class="footer-link">Meet Our Developers</a></div>
        </div>
    </footer>

    <!-- Join Class Modal -->
    <div id="joinClassModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title"><i data-lucide="graduation-cap" style="width:20px;height:20px"></i> Join New
                    Class</h2>
                <button class="close-btn" onclick="hideJoinClassModal()">&times;</button>
            </div>
            <div id="joinStep1">
                <div class="form-group">
                    <label class="form-label">Class Join Code</label>
                    <input type="text" id="joinCode" class="form-input" placeholder="Enter 6-digit code (e.g., PHY123)"
                        maxlength="6" style="text-transform:uppercase;">
                    <small style="color:var(--muted);font-size:0.85rem;margin-top:0.5rem;display:block;">
                        <i data-lucide="lightbulb"
                            style="width:14px;height:14px;display:inline;vertical-align:middle;margin-right:2px"></i>
                        Ask your teacher for the class join code (expires in 10 minutes)
                    </small>
                </div>
                <div style="display:flex;gap:1rem;margin-top:1.5rem;">
                    <button type="button" class="btn btn-secondary" onclick="hideJoinClassModal()">Cancel</button>
                    <button type="button" class="btn" onclick="validateJoinCode()" style="flex:1;">Validate
                        Code</button>
                </div>
            </div>
            <div id="joinStep2" style="display:none;">
                <div id="classPreview" class="class-preview"></div>
                <div style="display:flex;gap:1rem;margin-top:1.5rem;">
                    <button type="button" class="btn btn-secondary" onclick="backToStep1()">&#8592; Back</button>
                    <button type="button" class="btn btn-success" onclick="submitJoinRequest()" style="flex:1;">Send
                        Join Request</button>
                </div>
            </div>
            <div id="joinStep3" style="display:none;">
                <div id="requestStatus"></div>
            </div>
        </div>
    </div>

    <script>
        const studentName = '{{{userName}}}';
        let currentJoinCode = '';
        let currentClassData = {};

        document.addEventListener('DOMContentLoaded', function () {
            lucide.createIcons();
            loadClasses();
            setProfileInitials();
        });

        function setProfileInitials() {
            const name = studentName || 'Student';
            const initials = name.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase();
            document.querySelectorAll('.profile-initials').forEach(el => el.textContent = initials);
        }

        async function loadClasses() {
            try {
                const response = await fetch('/api/student/enrolled-classes');
                const data = await response.json();
                const container = document.getElementById('classesContainer');

                if (data.success && data.classes && data.classes.length > 0) {
                    container.innerHTML = '<div class="classes-grid">' + data.classes.map(cls => {
                        const avg = parseFloat(cls.averageScore || 0).toFixed(1);
                        const progressClass = avg >= 70 ? 'green' : avg >= 40 ? 'yellow' : 'red';
                        const joinDate = cls.enrolledAt ? new Date(cls.enrolledAt).toLocaleDateString('en-US', { month: 'short', year: 'numeric' }) : '';
                        return `
                            <div class="class-card" onclick="goToClass('${cls.classId}')">
                                <div class="card-top">
                                    <div class="card-subject-icon">
                                        <i data-lucide="book-open" style="width:24px;height:24px"></i>
                                    </div>
                                    <span class="card-subject-badge">${cls.classSubject}</span>
                                </div>
                                <div class="card-subject">${cls.className}</div>
                                <div class="card-teacher">
                                    <i data-lucide="user" style="width:14px;height:14px"></i>
                                    ${cls.teacherName || 'Teacher'}
                                </div>
                                <div class="card-stats">
                                    <div class="stat-item">
                                        <span class="stat-value">${cls.quizzesTaken || 0}</span>
                                        <span class="stat-label">Quizzes</span>
                                    </div>
                                    <div class="stat-item">
                                        <span class="stat-value">${avg}%</span>
                                        <span class="stat-label">Average</span>
                                    </div>
                                    <div class="stat-item">
                                        <span class="stat-value">${cls.availableQuizzes || 0}</span>
                                        <span class="stat-label">Available</span>
                                    </div>
                                </div>
                                <div class="card-progress">
                                    <div class="progress-track"><div class="progress-fill ${progressClass}" style="width:${avg}%"></div></div>
                                    <span class="progress-value">${avg}%</span>
                                </div>
                                <div class="card-action">
                                    <span class="card-date">${joinDate ? 'Joined ' + joinDate : ''}</span>
                                    <button class="go-btn" onclick="event.stopPropagation(); goToClass('${cls.classId}')">
                                        <i data-lucide="arrow-right" style="width:14px;height:14px"></i> Open
                                    </button>
                                </div>
                            </div>
                        `;
                    }).join('') + '</div>';
                    lucide.createIcons();
                } else {
                    container.innerHTML = `
                        <div class="empty-state">
                            <div class="empty-icon"><i data-lucide="book-open" style="width:36px;height:36px"></i></div>
                            <h3>No Classes Yet</h3>
                            <p>Join your first class to get started with quizzes and learning!</p>
                            <button class="join-btn" onclick="showJoinClassModal()" style="margin:0 auto;">
                                <i data-lucide="plus" style="width:18px;height:18px"></i> Join a Class
                            </button>
                        </div>
                    `;
                    lucide.createIcons();
                }
            } catch (error) {
                console.error('Error loading classes:', error);
                document.getElementById('classesContainer').innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon"><i data-lucide="alert-circle" style="width:36px;height:36px"></i></div>
                        <h3>Error Loading Classes</h3>
                        <p>Something went wrong. Please try again.</p>
                        <button class="btn" onclick="loadClasses()">Try Again</button>
                    </div>
                `;
                lucide.createIcons();
            }
        }

        function goToClass(classId) {
            window.location.href = `/student/class/${classId}`;
        }

        // ==================== JOIN CLASS ====================

        function showJoinClassModal() {
            document.getElementById('joinClassModal').classList.add('show');
            resetJoinModal();
            document.getElementById('joinCode').focus();
        }

        function hideJoinClassModal() {
            document.getElementById('joinClassModal').classList.remove('show');
            resetJoinModal();
        }

        function resetJoinModal() {
            document.getElementById('joinStep1').style.display = 'block';
            document.getElementById('joinStep2').style.display = 'none';
            document.getElementById('joinStep3').style.display = 'none';
            document.getElementById('joinCode').value = '';
            currentJoinCode = '';
            currentClassData = {};
        }

        async function validateJoinCode() {
            const code = document.getElementById('joinCode').value.trim().toUpperCase();
            if (!code || code.length !== 6) { showError('Please enter a valid 6-digit join code.'); return; }
            try {
                const response = await fetch(`/api/classes/validate-join-code/${code}`);
                if (!response.ok) { const d = await response.json(); showError(d.message || 'Server error.'); return; }
                const data = await response.json();
                if (data.success) {
                    currentJoinCode = code;
                    currentClassData = data.classInfo;
                    showClassPreview(data.classInfo);
                    document.getElementById('joinStep1').style.display = 'none';
                    document.getElementById('joinStep2').style.display = 'block';
                } else { showError(data.message || 'Invalid or expired join code.'); }
            } catch (e) { showError('Network error. Please try again.'); }
        }

        function showClassPreview(classInfo) {
            document.getElementById('classPreview').innerHTML = `
                <h3 style="color:var(--primary);display:flex;align-items:center;gap:0.5rem;margin-bottom:0.5rem"><i data-lucide="book-open" style="width:20px;height:20px"></i>${classInfo.classSubject}</h3>
                <p style="color:var(--secondary);font-weight:500;margin-bottom:0.5rem">${classInfo.className}</p>
                <p style="color:var(--muted);font-size:0.85rem;margin-bottom:1rem"><i data-lucide="user" style="width:14px;height:14px;display:inline;vertical-align:middle;margin-right:4px"></i>${classInfo.teacherName}</p>
                <div class="class-preview-stats">
                    <div class="preview-stat"><div class="preview-stat-value">${classInfo.studentCount || 0}</div><div class="preview-stat-label">Students</div></div>
                    <div class="preview-stat"><div class="preview-stat-value">${classInfo.quizCount || 0}</div><div class="preview-stat-label">Quizzes</div></div>
                    <div class="preview-stat"><div class="preview-stat-value">${Math.floor((classInfo.remainingTime || 0) / 60)}m</div><div class="preview-stat-label">Time Left</div></div>
                </div>
                <div style="background:rgba(20,39,78,0.05);padding:1rem;border-radius:6px;margin-top:1rem;border:1px solid rgba(20,39,78,0.1)">
                    <p style="color:var(--primary);font-size:0.9rem;margin:0"><strong>Join Request:</strong> Your request will be sent to the teacher for approval.</p>
                </div>`;
            lucide.createIcons();
        }

        async function submitJoinRequest() {
            try {
                const response = await fetch('/api/classes/join-request', {
                    method: 'POST', headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ joinCode: currentJoinCode })
                });
                const data = await response.json();
                if (data.success) {
                    document.getElementById('joinStep2').style.display = 'none';
                    document.getElementById('joinStep3').style.display = 'block';
                    document.getElementById('requestStatus').innerHTML = `
                        <div style="text-align:center;padding:2rem">
                            <div style="margin-bottom:1rem"><i data-lucide="check-circle" style="width:48px;height:48px;color:#10b981"></i></div>
                            <h3 style="color:#10b981;margin-bottom:1rem">Request Sent!</h3>
                            <p style="color:var(--muted);margin-bottom:1.5rem">Your join request for <strong>${currentClassData.classSubject}</strong> has been sent to <strong>${currentClassData.teacherName}</strong>.</p>
                            <button class="btn" onclick="hideJoinClassModal()" style="width:100%">Close</button>
                        </div>`;
                    lucide.createIcons();
                    setTimeout(() => { hideJoinClassModal(); loadClasses(); }, 5000);
                } else { showError(data.message || 'Failed to send join request.'); }
            } catch (e) { showError('Network error. Please try again.'); }
        }

        function backToStep1() {
            document.getElementById('joinStep1').style.display = 'block';
            document.getElementById('joinStep2').style.display = 'none';
        }

        document.addEventListener('DOMContentLoaded', function () {
            const input = document.getElementById('joinCode');
            if (input) input.addEventListener('input', e => { e.target.value = e.target.value.toUpperCase().replace(/[^A-Z0-9]/g, ''); });
        });

        function showError(msg) {
            document.querySelectorAll('.alert').forEach(a => a.remove());
            document.body.insertAdjacentHTML('afterbegin', `<div class="alert alert-error" style="position:fixed;top:20px;right:20px;z-index:1000;max-width:400px"><strong>Error!</strong> ${msg}<button onclick="this.parentElement.remove()" style="float:right;background:none;border:none;font-size:18px;cursor:pointer">&times;</button></div>`);
            setTimeout(() => { const a = document.querySelector('.alert-error'); if (a) a.remove(); }, 10000);
        }
        // Mobile sidebar toggle
        function toggleMobileNav() {
            document.getElementById('mobileNav').classList.add('open');
            document.getElementById('mobileOverlay').classList.add('open');
            document.body.style.overflow = 'hidden';
            lucide.createIcons();
        }

        function closeMobileNav() {
            document.getElementById('mobileNav').classList.remove('open');
            document.getElementById('mobileOverlay').classList.remove('open');
            document.body.style.overflow = '';
        }

        function showNotificationToast() {
            closeMobileNav();
            let toast = document.getElementById('notifToast');
            if (!toast) {
                toast = document.createElement('div');
                toast.id = 'notifToast';
                toast.className = 'notification-toast';
                toast.textContent = 'ðŸ”” Notifications coming soon!';
                document.body.appendChild(toast);
            }
            setTimeout(() => toast.classList.add('show'), 50);
            setTimeout(() => {
                toast.classList.remove('show');
            }, 2500);
        }
    </script>
</body>

</html>