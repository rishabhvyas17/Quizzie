            </div>
        </section>

        <!-- Tab Navigation -->
        <div class="tab-navigation">
            <button class="tab-button active" onclick="showTab('quizzes')">
                üìù All Quizzes
            </button>
            <button class="tab-button" onclick="showTab('performance')">
                üìä My Performance
            </button>
