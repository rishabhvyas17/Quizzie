            // Display first question
            displayQuestion(0);
            
            // Create question navigation
            createQuestionNavigation();
            
            console.log('üöÄ Enhanced shuffled anti-cheating quiz with exam mode timer initialized successfully:', {
                duration: QUIZ_TIME_LIMIT / 60 + ' minutes',
                totalQuestions: quizData.totalQuestions,
                questionsShuffled: true,
                optionsShuffled: true,
                questionMapping: questionMapping.length,
                optionMappings: optionMappings.length,
                examMode: isExamMode,
                timerMode: isExamMode ? 'synchronized exam timer' : 'regular timer'
            });
        }

        // Create question navigation grid (Enhanced for 3 columns)
        function createQuestionNavigation() {
            const grid = document.getElementById('questionGrid');
            grid.innerHTML = '';
            
            // Always use 3 columns layout
            console.log('üìã Creating question navigation with 3 columns for', quizData.totalQuestions, 'shuffled questions');
            
            for (let i = 0; i < quizData.totalQuestions; i++) {
                const btn = document.createElement('button');
                btn.className = 'question-nav-btn';
                btn.textContent = i + 1;
                btn.onclick = () => displayQuestion(i);
                btn.title = `Question ${i + 1} (Shuffled)`;
                grid.appendChild(btn);
            }
        }

        // Update question navigation with proper visited/skipped logic
        function updateQuestionNavigation() {
            const buttons = document.getElementById('questionGrid').children;
            
            for (let i = 0; i < buttons.length; i++) {
                const btn = buttons[i];
                btn.className = 'question-nav-btn';
                
                if (i === currentQuestionIndex) {
                    // Current question - blue highlight
                    btn.classList.add('current');
                } else if (studentAnswers[i] !== null) {
                    // Answered question - green border
                    btn.classList.add('answered');
                } else if (visitedQuestions[i] === true) {
                    // Visited but not answered - orange border (truly skipped)
                    btn.classList.add('skipped');
                }
                // Unvisited questions stay default gray - no special styling
            }
        }

        // Display a specific question with shuffled content
        function displayQuestion(index) {
            if (!quizData || !quizData.questions[index]) {
                console.error('‚ùå Invalid question index:', index);
                return;
            }

            const question = quizData.questions[index];
            currentQuestionIndex = index;

            // Mark this question as visited
            visitedQuestions[index] = true;

            // Update question number display
            document.getElementById('questionNumber').textContent = `Question ${index + 1}`;

            // Update question text
            document.getElementById('questionText').textContent = question.question;
            
            // Display shuffled options
            const optionsContainer = document.getElementById('optionsContainer');
            optionsContainer.innerHTML = '';
            
            ['A', 'B', 'C', 'D'].forEach(letter => {
                const option = document.createElement('div');
                option.className = 'option';
                option.onclick = (e) => selectOption(letter, e);
                
                // Check if this option was previously selected
                if (studentAnswers[index] === letter) {
                    option.classList.add('selected');
                }
                
                option.innerHTML = `
                    <div class="option-letter">${letter}</div>
                    <div class="option-text">${question.options[letter]}</div>
                `;
                
                optionsContainer.appendChild(option);
            });
            
            // Update navigation buttons
            updateNavigationButtons();
            updateQuestionNavigation();

            console.log(`üìÑ Displaying shuffled question ${index + 1}:`, {
                shuffledIndex: index,
                originalIndex: question.originalIndex,
                shuffledCorrect: question.correct_answer,
                originalCorrect: question.original_correct_answer
            });
        }

        // Enhanced select option with toned-down animation
        function selectOption(letter, event) {
            console.log(`üìù Selecting option ${letter} for shuffled question ${currentQuestionIndex + 1}`);
            
            // Get the clicked option element
            const clickedOption = event.target.closest('.option');
            
            // Remove previous selection
            document.querySelectorAll('.option').forEach(opt => {
                opt.classList.remove('selected', 'click-flash');
            });
            
            // Add click flash animation first
            clickedOption.classList.add('click-flash');
            
            // Then add selection after a brief delay
            setTimeout(() => {
                clickedOption.classList.remove('click-flash');
                clickedOption.classList.add('selected');
                
                // Store answer for shuffled question
                studentAnswers[currentQuestionIndex] = letter;
                
                // Update question navigation
                updateQuestionNavigation();
                
                console.log('‚ú® Option selection animation completed');
                
                // Auto-advance to next question after animation
                setTimeout(() => {
                    if (currentQuestionIndex < quizData.totalQuestions - 1) {
                        nextQuestion();
                    }
                }, 300); // Reduced from 400ms to match toned-down animation
                
            }, 100); // Reduced from 150ms for quicker response
        }

        // Navigation functions
        function nextQuestion() {
            if (currentQuestionIndex < quizData.totalQuestions - 1) {
                displayQuestion(currentQuestionIndex + 1);
            }
        }

        function previousQuestion() {
            if (currentQuestionIndex > 0) {
                displayQuestion(currentQuestionIndex - 1);
            }
        }

        function updateNavigationButtons() {
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const submitBtn = document.getElementById('submitBtn');
            
            // Previous button
            prevBtn.disabled = currentQuestionIndex === 0;
            
            // Next/Submit button logic
            if (currentQuestionIndex === quizData.totalQuestions - 1) {
                nextBtn.style.display = 'none';
                submitBtn.style.display = 'block';
            } else {
                nextBtn.style.display = 'block';
                submitBtn.style.display = 'none';
            }
        }

        // FIXED Submit quiz function with proper originalFormatAnswers definition
        async function submitQuiz() {
            // Check if this is an auto-submission
            const isAutoSubmitted = !!window.autoSubmissionReason;
            const autoReason = window.autoSubmissionReason || null;
            
            console.log('üì§ Submitting quiz:', {
                isAutoSubmitted: isAutoSubmitted,
                reason: autoReason,
                quizId: quizId
            });

            if (!quizData || !quizData.questions || !originalQuizData) {
                console.error('‚ùå Quiz data is missing!');
                alert('Quiz data is missing. Please refresh and try again.');
                return;
            }

            // Mark as submitted to prevent further violations
            isQuizSubmitted = true;

            // Stop ALL timers
            if (timerInterval) {
                clearInterval(timerInterval);
                timerInterval = null;
            }
            if (examSessionTimer) {
                clearInterval(examSessionTimer);
                examSessionTimer = null;
            }
            
            // Calculate time taken
            const timeTakenSeconds = Math.floor((Date.now() - startTime) / 1000);
            
            // Convert shuffled answers back to original question format
            console.log('üîÑ Converting shuffled answers to original format...');
            const originalFormatAnswers = [];
            
            studentAnswers.forEach((shuffledAnswer, shuffledIndex) => {
                if (shuffledAnswer !== null) {
                    const conversion = convertToOriginalAnswer(shuffledIndex, shuffledAnswer);
                    
                    originalFormatAnswers.push({
                        questionIndex: conversion.originalQuestionIndex,
                        question: originalQuizData.questions[conversion.originalQuestionIndex].question,
                        selectedOption: conversion.originalAnswer,
                        // Additional shuffle tracking for analytics
                        shuffleData: {
                            shuffledQuestionIndex: shuffledIndex,
                            shuffledAnswer: shuffledAnswer,
                            wasShuffled: true
                        }
                    });
                }
            });
            
            // Sort by original question index to maintain order
            originalFormatAnswers.sort((a, b) => a.questionIndex - b.questionIndex);
            
            console.log('‚úÖ Converted answers:', originalFormatAnswers);
            
            // Add auto-submission data to submissionData object
            const submissionData = {
                studentAnswers: originalFormatAnswers,
                timeTakenSeconds: timeTakenSeconds,
                classContext: classContext,
                // Add auto-submission tracking
                autoSubmissionData: {
                    wasAutoSubmitted: isAutoSubmitted,
                    autoSubmissionReason: autoReason,
                    submissionTrigger: autoReason || 'manual'
                },
                // Anti-cheating data
                antiCheatData: {
                    violationCount: violationCount,
                    wasAutoSubmitted: violationCount >= MAX_VIOLATIONS || !!window.autoSubmissionReason,
                    gracePeriodsUsed: violationCount, // Track how many times grace period was activated
                    autoSubmissionReason: window.autoSubmissionReason || null
                },
                // Exam mode data
                examModeData: {
                    wasExamMode: isExamMode,
                    timerType: isExamMode ? 'synchronized' : 'regular',
                    submissionTrigger: window.autoSubmissionReason || 'manual'
                },
                // Shuffle data for analytics and verification
                shuffleData: {
                    wasShuffled: true,
                    questionMapping: questionMapping,
                    optionMappings: optionMappings,
                    shuffleTimestamp: quizData.shuffleInfo.shuffleTimestamp,
                    totalQuestionsShuffled: quizData.totalQuestions
                },
                // Additional navigation hints for backend
                navigationHints: {
                    fromClassView: !!classContext.classId,
                    preferredReturnUrl: classContext.classId ? `/student/class/${classContext.classId}` : '/homeStudent'
                }
            };
            
            console.log('üì§ Submitting enhanced shuffled quiz with comprehensive data:', submissionData);
            
            // Show loading state
            showSubmissionLoading();
            
            try {
                const response = await fetch(`/api/quiz/submit/${quizId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(submissionData)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    console.log('‚úÖ Enhanced shuffled quiz submitted successfully:', result);
                    
                    // Store comprehensive result data with shuffle, exam mode and violation info
                    const enhancedResult = {
                        ...result,
                        lectureId: quizData.lectureId || originalQuizData.lectureId,
                        classContext: classContext,
                        quizDurationMinutes: QUIZ_TIME_LIMIT / 60, // Store actual quiz duration
                        // Include shuffle summary
                        shuffleSummary: {
                            wasShuffled: true,
                            questionsShuffled: true,
                            optionsShuffled: true,
                            totalQuestions: quizData.totalQuestions,
                            shuffleTimestamp: quizData.shuffleInfo.shuffleTimestamp
                        },
                        // Include anti-cheating summary
                        antiCheatSummary: {
                            violationCount: violationCount,
                            wasAutoSubmitted: violationCount >= MAX_VIOLATIONS || !!window.autoSubmissionReason,
                            securityStatus: violationCount === 0 ? 'Clean' : 
                                          violationCount === 1 ? 'Warning Issued' : 'Auto-Submitted',
                            autoSubmissionReason: window.autoSubmissionReason || null
                        },
                        // Include exam mode summary
                        examModeSummary: {
                            wasExamMode: isExamMode,
                            timerType: isExamMode ? 'Synchronized Exam Timer' : 'Regular Timer',
                            submissionTrigger: window.autoSubmissionReason || 'Manual Submission'
                        },
                        // Enhanced navigation context from backend response
                        navigationContext: result.navigationContext || {
                            hasClass: classContext.hasClass,
                            classId: classContext.classId,
                            className: classContext.className,
                            returnToClass: !!classContext.classId
                        },
                        suggestedRedirect: result.suggestedRedirect || {
                            backUrl: classContext.classId ? `/student/class/${classContext.classId}` : '/homeStudent',
                            backLabel: classContext.className ? `Back to ${classContext.className}` : 'Back to Dashboard'
                        }
                    };
                    
                    showResults(enhancedResult);
                } else {
                    console.error('‚ùå Quiz submission failed:', result.message);
                    alert('Failed to submit quiz: ' + result.message);
                    isQuizSubmitted = false; // Allow retry
                }
            } catch (error) {
                console.error('‚ùå Error submitting quiz:', error);
                alert('Network error while submitting quiz. Please try again.');
                isQuizSubmitted = false; // Allow retry
            }
        }

        // Show submission loading with shuffle context and exam mode
        function showSubmissionLoading() {
            document.getElementById('quizContainer').style.display = 'none';
            document.getElementById('loadingContainer').style.display = 'block';
            
            let loadingText = classContext.hasClass 
