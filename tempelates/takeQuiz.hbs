                e.preventDefault();
                e.returnValue = warningMessage;
                return e.returnValue;
            }
        });

        // Enhanced console log for debugging with shuffle info and exam mode
        console.log('üéØ Enhanced shuffled takeQuiz.hbs with exam mode timer loaded:', {
            classContext: classContext,
            quizId: quizId,
            // Enhanced timer features
            examModeSupport: true,
            synchronizedTimer: true,
            regularTimer: true,
            autoSubmitOnTimeUp: true,
            // Shuffle features
            questionShuffling: true,
            optionShuffling: true,
            shuffleMapping: true,
            // Enhanced features
            enhancedNavigation: true,
            dynamicDuration: true,
            antiCheatingActive: true,
            maxViolations: MAX_VIOLATIONS,
            gracePeriod: GRACE_PERIOD / 1000 + ' seconds',
            detectionMethods: ['tab_switch', 'window_blur', 'task_switcher', 'windows_key', 'focus_loss'],
            // UI features
            fullscreenMode: false,
            improvedUI: true,
            navigationPanel: '3-column grid, smaller buttons',
            optionAnimation: 'enhanced click animations',
            shuffleIndicators: true,
            examModeIndicators: true,
            visualFeedback: 'shuffle badges, exam mode alerts, and enhanced status indicators'
        });
