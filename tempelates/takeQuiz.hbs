        // Prepare detailed question data with shuffle consideration
        function prepareQuestionDetails() {
            if (!quizData || !quizData.questions || !originalQuizData) {
                console.error('‚ùå Quiz data not available for detailed results');
                return [];
            }

            // Map shuffled answers back to original questions for detailed view
            const detailedResults = [];
            
            studentAnswers.forEach((shuffledAnswer, shuffledIndex) => {
                if (shuffledAnswer !== null) {
                    const shuffledQuestion = quizData.questions[shuffledIndex];
                    const conversion = convertToOriginalAnswer(shuffledIndex, shuffledAnswer);
                    const originalQuestion = originalQuizData.questions[conversion.originalQuestionIndex];
                    
                    detailedResults.push({
                        questionIndex: conversion.originalQuestionIndex,
                        questionText: originalQuestion.question,
                        options: originalQuestion.options,
                        studentAnswer: conversion.originalAnswer,
                        correctAnswer: originalQuestion.correct_answer,
                        isCorrect: conversion.originalAnswer === originalQuestion.correct_answer,
                        // Shuffle metadata for detailed analysis
                        shuffleMetadata: {
                            shuffledIndex: shuffledIndex,
                            shuffledAnswer: shuffledAnswer,
                            shuffledOptions: shuffledQuestion.options,
                            wasShuffled: true
                        }
                    });
                }
            });
            
            // Sort by original question index
            detailedResults.sort((a, b) => a.questionIndex - b.questionIndex);
            
            return detailedResults;
        }

        // goToDashboard function with smart navigation
        function goToDashboard() {
            const storedResults = localStorage.getItem('quizResults');
            if (storedResults) {
                // Redirect to detailed results page
                const resultsData = JSON.parse(storedResults);
                
                // Enhanced: Add navigation hints to results page URL
                let resultsUrl = '/quiz-results';
                if (resultsData.classContext && resultsData.classContext.hasClass) {
                    const params = new URLSearchParams({
                        classId: resultsData.classContext.classId,
                        className: resultsData.classContext.className,
                        returnTo: 'class',
                        shuffled: 'true', // Indicate this was a shuffled quiz
                        examMode: resultsData.examModeSummary?.wasExamMode ? 'true' : 'false'
                    });
                    resultsUrl += '?' + params.toString();
                }
                
                window.location.href = resultsUrl;
            } else if (classContext.hasClass) {
                // Redirect to class dashboard if in class context
                window.location.href = `/student/class/${classContext.classId}`;
            } else {
                // Fallback to student dashboard
                window.location.href = '/homeStudent';
            }
        }

        // Error handling with class-aware navigation
        function showError(message) {
            const backButtonText = classContext.hasClass 
