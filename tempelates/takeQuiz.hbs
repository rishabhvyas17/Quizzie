        /**
         * Fisher-Yates shuffle algorithm for randomizing arrays
         * @param {Array} array - Array to shuffle
         * @returns {Array} - Shuffled array
         */
        function shuffleArray(array) {
            const shuffled = [...array]; // Create a copy to avoid mutating original
            for (let i = shuffled.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
            }
            return shuffled;
        }

        /**
         * Shuffle questions while maintaining original question mapping
         * @param {Array} questions - Original questions array
         * @returns {Object} - Shuffled questions and mapping
         */
        function shuffleQuestions(questions) {
            console.log('üîÄ Shuffling questions...');
            
            // Create array of indices
            const indices = Array.from({ length: questions.length }, (_, i) => i);
            
            // Shuffle indices
            const shuffledIndices = shuffleArray(indices);
            
            // Create shuffled questions array
            const shuffledQuestions = shuffledIndices.map(originalIndex => ({
                ...questions[originalIndex],
                originalIndex: originalIndex // Keep track of original position
            }));
            
            console.log('‚úÖ Questions shuffled:', {
                originalOrder: indices,
                shuffledOrder: shuffledIndices,
                totalQuestions: questions.length
            });
            
            return {
                questions: shuffledQuestions,
                mapping: shuffledIndices
            };
        }

        /**
         * Shuffle options for a single question while preserving correct answer
         * @param {Object} question - Question object with options
         * @returns {Object} - Question with shuffled options and mapping
         */
        function shuffleQuestionOptions(question) {
            const originalOptions = { ...question.options };
            const originalCorrectAnswer = question.correct_answer;
            
            // Create option entries with original letters
            const optionEntries = [
                { letter: 'A', text: originalOptions.A },
                { letter: 'B', text: originalOptions.B },
                { letter: 'C', text: originalOptions.C },
                { letter: 'D', text: originalOptions.D }
            ];
            
            // Shuffle the option entries
            const shuffledEntries = shuffleArray(optionEntries);
            
            // Create new options object with shuffled content
            const shuffledOptions = {};
            const optionMapping = {};
            let newCorrectAnswer = null;
            
            shuffledEntries.forEach((entry, index) => {
                const newLetter = ['A', 'B', 'C', 'D'][index];
                shuffledOptions[newLetter] = entry.text;
                optionMapping[newLetter] = entry.letter; // Map new letter to original letter
                
                // Update correct answer to new letter
                if (entry.letter === originalCorrectAnswer) {
                    newCorrectAnswer = newLetter;
                }
            });
            
            return {
                question: {
                    ...question,
                    options: shuffledOptions,
                    correct_answer: newCorrectAnswer,
                    original_correct_answer: originalCorrectAnswer
                },
                optionMapping: optionMapping
            };
        }

        /**
         * Shuffle entire quiz including questions and options
         * @param {Object} quizData - Original quiz data
         * @returns {Object} - Completely shuffled quiz data with mappings
         */
        function shuffleEntireQuiz(originalData) {
            console.log('üé≤ Starting comprehensive quiz shuffle...');
            
            // Step 1: Shuffle questions
            const questionShuffleResult = shuffleQuestions(originalData.questions);
            const shuffledQuestions = questionShuffleResult.questions;
            questionMapping = questionShuffleResult.mapping;
            
            // Step 2: Shuffle options for each question
            const finalQuestions = [];
            optionMappings = [];
            
            shuffledQuestions.forEach((question, index) => {
                const optionShuffleResult = shuffleQuestionOptions(question);
                finalQuestions.push(optionShuffleResult.question);
                optionMappings.push(optionShuffleResult.optionMapping);
                
                console.log(`üîÄ Question ${index + 1} shuffled:`, {
                    originalIndex: question.originalIndex,
                    originalCorrect: question.original_correct_answer,
                    newCorrect: optionShuffleResult.question.correct_answer,
                    optionMapping: optionShuffleResult.optionMapping
                });
            });
            
            // Create shuffled quiz data
            const shuffledQuizData = {
                ...originalData,
                questions: finalQuestions,
                shuffleInfo: {
                    isShuffled: true,
                    questionMapping: questionMapping,
                    optionMappings: optionMappings,
                    shuffleTimestamp: new Date().toISOString(),
                    totalQuestions: finalQuestions.length
                }
            };
            
            console.log('‚úÖ Complete quiz shuffle finished:', {
                totalQuestions: shuffledQuizData.questions.length,
                questionMapping: questionMapping,
                optionMappingsCount: optionMappings.length
            });
            
            return shuffledQuizData;
