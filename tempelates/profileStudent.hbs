<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile - Quizzie</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: #eef1f8;
            color: #334155;
            line-height: 1.6;
        }

        /* ===== HEADER (matches dashboard) ===== */
        .header {
            background: white;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.06);
            padding: 0.75rem 0;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .header-content {
            max-width: 1260px;
            margin: 0 auto;
            padding: 0 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-size: 1.6rem;
            font-weight: 800;
            background: linear-gradient(135deg, #7c5cfc, #a78bfa);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: -0.5px;
        }

        .nav-links {
            list-style: none;
            display: flex;
            gap: 0.5rem;
        }

        .nav-links a {
            text-decoration: none;
            color: #94a3b8;
            font-weight: 500;
            font-size: 0.85rem;
            padding: 0.5rem 1rem;
            border-radius: 10px;
            transition: all 0.2s;
            cursor: pointer;
        }

        .nav-links a:hover {
            color: #1e293b;
            background: #eef1f8;
        }

        .nav-links a.active {
            color: #1e293b;
            background: #eef1f8;
            font-weight: 600;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .header-icon {
            width: 38px;
            height: 38px;
            border-radius: 12px;
            border: none;
            background: #eef1f8;
            color: #64748b;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s;
        }

        .header-icon:hover {
            background: #e2e8f0;
            color: #1e293b;
        }

        .kohert-btn {
            background: linear-gradient(135deg, #14274E 0%, #394867 100%);
            color: white !important;
            padding: 0.5rem 1.25rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 0.9rem;
            text-decoration: none;
            box-shadow: 0 4px 12px rgba(20, 39, 78, 0.2);
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .kohert-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(20, 39, 78, 0.3);
            background: linear-gradient(135deg, #1f3a6e 0%, #4b5d85 100%);
        }

        .header-profile {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #394867 0%, #14274E 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 0.9rem;
            text-decoration: none;
            margin-left: 0.75rem;
            border: 2px solid #F1F6F9;
            box-shadow: 0 2px 8px rgba(20, 39, 78, 0.15);
            transition: all 0.2s;
        }

        .header-profile:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 12px rgba(20, 39, 78, 0.25);
        }

        /* ===== PROFILE PAGE ===== */
        .container {
            max-width: 820px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        .profile-header {
            background: linear-gradient(135deg, #7c5cfc, #a78bfa, #c4b5fd);
            border-radius: 24px;
            padding: 2.5rem;
            text-align: center;
            color: white;
            margin-bottom: 1.5rem;
            box-shadow: 0 12px 40px rgba(124, 92, 252, 0.25);
        }

        .profile-header .avatar {
            width: 90px;
            height: 90px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 2.25rem;
            font-weight: 800;
            backdrop-filter: blur(12px);
            border: 3px solid rgba(255, 255, 255, 0.35);
        }

        .profile-header h1 {
            font-size: 2rem;
            margin: 0 0 0.35rem 0;
            font-weight: 800;
            letter-spacing: -0.5px;
        }

        .profile-header .role {
            font-size: 1rem;
            opacity: 0.85;
            margin: 0;
            font-weight: 500;
        }

        .profile-content {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.25rem;
            margin-bottom: 1.5rem;
        }

        .profile-card {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.04);
            border: 1px solid rgba(0, 0, 0, 0.04);
        }

        .profile-card h2 {
            font-size: 1.15rem;
            font-weight: 700;
            color: #1e293b;
            margin: 0 0 1.5rem 0;
            display: flex;
            align-items: center;
            gap: 0.6rem;
        }

        .profile-card .icon {
            width: 28px;
            height: 28px;
            background: linear-gradient(135deg, #7c5cfc, #a78bfa);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 13px;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.45rem;
            font-weight: 600;
            color: #374151;
            font-size: 0.88rem;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 14px;
            font-size: 0.95rem;
            font-family: inherit;
            box-sizing: border-box;
            transition: all 0.25s ease;
            background: #fafbfe;
        }

        .form-control:focus {
            outline: none;
            border-color: #7c5cfc;
            box-shadow: 0 0 0 4px rgba(124, 92, 252, 0.1);
            background: white;
        }

        .form-control:disabled {
            background: #f0f2f7;
            color: #94a3b8;
            cursor: not-allowed;
        }

        .btn {
            background: linear-gradient(135deg, #7c5cfc, #a78bfa);
            color: white;
            border: none;
            padding: 0.85rem 1.75rem;
            border-radius: 14px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.25s ease;
            font-size: 0.95rem;
            width: 100%;
            display: block;
            text-align: center;
            text-decoration: none;
            box-shadow: 0 4px 16px rgba(124, 92, 252, 0.3);
            font-family: inherit;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(124, 92, 252, 0.4);
        }

        .btn:active {
            transform: translateY(0);
        }

        .btn-secondary {
            background: #e2e8f0;
            color: #475569;
            box-shadow: none;
        }

        .btn-secondary:hover {
            background: #cbd5e1;
            box-shadow: none;
        }

        .alert {
            padding: 1rem 1.25rem;
            border-radius: 14px;
            margin-bottom: 1.25rem;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 0.6rem;
        }

        .alert-success {
            background: #ecfdf5;
            color: #065f46;
            border: 1px solid #a7f3d0;
        }

        .alert-danger {
            background: #fef2f2;
            color: #991b1b;
            border: 1px solid #fecaca;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            margin-top: 0.5rem;
        }

        .status-verified {
            background: #ecfdf5;
            color: #059669;
        }

        .status-unverified {
            background: #fffbeb;
            color: #d97706;
        }

        .resend-link {
            color: #7c5cfc;
            text-decoration: none;
            font-weight: 500;
            font-size: 0.85rem;
            margin-top: 0.5rem;
            display: inline-block;
            transition: color 0.2s ease;
        }

        .resend-link:hover {
            color: #6d28d9;
            text-decoration: underline;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
            color: #7c5cfc;
            font-weight: 600;
            padding: 0.75rem 1.25rem;
            border-radius: 14px;
            transition: all 0.25s ease;
            background: white;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.04);
        }

        .back-link:hover {
            background: #f7f5ff;
            transform: translateX(-3px);
        }

        .settings-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 0.75rem;
            margin-top: 1rem;
        }

        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                gap: 0.75rem;
            }

            .profile-header {
                padding: 2rem 1.25rem;
                border-radius: 20px;
            }

            .profile-header h1 {
                font-size: 1.6rem;
            }

            .profile-header .avatar {
                width: 72px;
                height: 72px;
                font-size: 1.75rem;
            }

            .settings-grid {
                grid-template-columns: 1fr;
            }

            .profile-card {
                padding: 1.5rem;
                border-radius: 16px;
            }
        }
    </style>
</head>

<body>
    <!-- Header Section -->
    <header class="header">
        <div class="header-content">
            <div class="logo">Quizzie</div>
            <nav>
                <ul class="nav-links">
                    <li><a href="/homeStudent">Dashboard</a></li>
                    <li><a href="/myClasses">My Classes</a></li>
                    <li><a class="active">My Profile</a></li>
                </ul>
            </nav>
            <div class="header-right">
                <a href="/comingSoon" class="kohert-btn" title="Kohert">Kohert</a>
                <button class="header-icon" title="Notifications"><i data-lucide="bell"
                        style="width:18px;height:18px"></i></button>
                <a href="/profileStudent" class="header-profile" title="My Profile">
                    <span class="profile-initials">SK</span>
                </a>
            </div>
        </div>
    </header>

    <div class="container">
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="avatar">{{initials}}</div>
            <h1>{{userName}}</h1>
            <p class="role">{{userType}}</p>
        </div>

        <!-- Success/Error Messages -->
        {{#if query.message}}
        <div class="alert alert-success">
            <span>‚úÖ</span>
            {{query.message}}
        </div>
        {{/if}}

        <!-- Profile Content -->
        <div class="profile-content">
            <!-- Personal Information -->
            <div class="profile-card">
                <h2>
                    <span class="icon">üë§</span>
                    Personal Information
                </h2>

                <form action="/profileStudent" method="POST">
                    <div class="form-group">
                        <label for="enrollmentNo" class="form-label">Enrollment No.</label> <!-- CHANGED LABEL -->
                        <input type="text" id="enrollmentNo" class="form-control" value="{{user.enrollment}}" readonly
                            disabled> <!-- CHANGED ID AND VALUE -->
                        <small style="color: #64748b; font-size: 0.85rem; margin-top: 5px; display: block;">
                            Your enrollment number cannot be changed.
                        </small>
                    </div>

                    <div class="form-group">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" id="email" name="email" class="form-control" value="{{user.email}}"
                            required>

                        {{#if user.email}}
                        {{#if user.isVerified}}
                        <div class="status-badge status-verified">
                            <span>‚úÖ</span>
                            Email Verified
                        </div>
                        {{else}}
                        <div class="status-badge status-unverified">
                            <span>‚ö†Ô∏è</span>
                            Email Not Verified
                        </div>
                        <a href="#" onclick="resendVerification()" class="resend-link">
                            Resend verification email
                        </a>
                        {{/if}}
                        {{else}}
                        <small style="color: #64748b; font-size: 0.85rem; margin-top: 5px; display: block;">
                            Enter your email address for account recovery
                        </small>
                        {{/if}}

                        <div class="inline-error-message" id="emailErrorMessage"
                            style="color: #ef4444; font-size: 0.85rem; margin-top: 8px; padding: 8px 12px; background: #fef2f2; border-radius: 8px; border: 1px solid #fecaca; display: none;">
                        </div>

                    </div>

                    <div class="form-group">
                        <label for="firstName" class="form-label">First Name</label>
                        <input type="text" id="firstName" name="firstName" class="form-control"
                            value="{{user.firstName}}" placeholder="Enter your first name">
                    </div>

                    <div class="form-group">
                        <label for="lastName" class="form-label">Last Name</label>
                        <input type="text" id="lastName" name="lastName" class="form-control" value="{{user.lastName}}"
                            placeholder="Enter your last name">
                    </div>

                    <button type="submit" class="btn">Update Profile</button>
                </form>
            </div>

            <!-- Account Settings -->
            <div class="profile-card">
                <h2>
                    <span class="icon">‚öôÔ∏è</span>
                    Account Settings
                </h2>

                <div class="settings-grid">
                    <button class="btn btn-secondary" onclick="showComingSoon('Change Password')">
                        Change Password
                    </button>
                    <button class="btn btn-secondary" onclick="showComingSoon('Privacy Settings')">
                        Privacy Settings
                    </button>
                    <button class="btn btn-secondary" onclick="showComingSoon('Notification Settings')">
                        Notification Settings
                    </button>
                    <button class="btn btn-secondary" onclick="showComingSoon('Download Data')">
                        Download Data
                    </button>
                </div>
            </div>
        </div>

        <!-- Back to Dashboard -->
        <div style="margin-top: 30px; text-align: center;">
            <a href="/homeStudent" class="back-link">
                <span>‚Üê</span>
                Back to Dashboard
            </a>
        </div>
    </div>

    <script>
        const studentName = '{{{userName}}}';
        document.addEventListener('DOMContentLoaded', function () {
            lucide.createIcons();
            setProfileInitials();

            const userName = "{{userName}}";

            if (userName) {
                const initials = userName.split(' ').map(name => name.charAt(0)).join('').toUpperCase();
                const avatars = document.querySelectorAll('.avatar');
                avatars.forEach(avatar => {
                    avatar.textContent = initials.substring(0, 2);
                });
            }

            const urlParams = new URLSearchParams(window.location.search);
            const successMessage = urlParams.get('message');
            const errorMessage = urlParams.get('error');

            if (successMessage) {
                showSuccess(decodeURIComponent(successMessage));
                // Clean URL after displaying
                urlParams.delete('message');
                window.history.replaceState({}, document.title, "?" + urlParams.toString());
            }

            // NEW: Display inline error message if present
            if (errorMessage) {
                const emailErrorDiv = document.getElementById('emailErrorMessage');
                if (emailErrorDiv) {
                    emailErrorDiv.textContent = decodeURIComponent(errorMessage);
                    emailErrorDiv.style.display = 'block'; // Make it visible
                    // Optionally, remove the error from the URL after displaying
                    urlParams.delete('error');
                    window.history.replaceState({}, document.title, "?" + urlParams.toString());
                }
            }
        }
        });

        function setProfileInitials() {
            const name = studentName || 'Student';
            const initials = name.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase();
            document.querySelectorAll('.profile-initials').forEach(el => el.textContent = initials);
        }

        // Enhanced success message display
        function showSuccess(message) {
            document.querySelectorAll('.alert').forEach(alert => alert.remove());
            const alertHTML = `
                <div class="alert alert-success" style="position: fixed; top: 20px; right: 20px; z-index: 1000; max-width: 400px; box-shadow: 0 8px 32px rgba(0,0,0,0.1);">
                    <span>‚úÖ</span>
                    <span>${message}</span>
                    <button onclick="this.parentElement.remove()" style="background: none; border: none; font-size: 18px; cursor: pointer; color: inherit; margin-left: auto;">&times;</button>
                </div>
            `;
            document.body.insertAdjacentHTML('afterbegin', alertHTML);
            setTimeout(() => {
                const alert = document.querySelector('.alert-success');
                if (alert) alert.remove();
            }, 5000);
        }

        // Enhanced error message display
        function showError(message) {
            document.querySelectorAll('.alert').forEach(alert => alert.remove());
            const alertHTML = `
                <div class="alert alert-danger" style="position: fixed; top: 20px; right: 20px; z-index: 1000; max-width: 400px; box-shadow: 0 8px 32px rgba(0,0,0,0.1);">
                    <span>‚ùå</span>
                    <span>${message}</span>
                    <button onclick="this.parentElement.remove()" style="background: none; border: none; font-size: 18px; cursor: pointer; color: inherit; margin-left: auto;">&times;</button>
                </div>
            `;
            document.body.insertAdjacentHTML('afterbegin', alertHTML);
            setTimeout(() => {
                const alert = document.querySelector('.alert-danger');
                if (alert) alert.remove();
            }, 8000);
        }

        // Show coming soon message for account settings
        function showComingSoon(feature) {
            showSuccess(`${feature} feature coming soon!`);
        }

        // Resend verification email
        async function resendVerification() {
            try {
                showSuccess('Sending verification email...');

                const response = await fetch('/resend-verification-email', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();

                if (data.success) {
                    showSuccess(data.message);
                } else {
                    showError('Error: ' + data.message);
                }
            } catch (error) {
                console.error('Failed to resend verification email:', error);
                showError('Network error. Please try again.');
            }
            return false;
        }

        // Add smooth scrolling for better UX
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>

</html>