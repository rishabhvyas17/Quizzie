<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile - Quizzie</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg: #F1F6F9;
            --primary: #14274E;
            --secondary: #394867;
            --muted: #9BA4B4;
            --white: #ffffff;
            --card-shadow: 0 2px 16px rgba(20, 39, 78, 0.07);
            --card-radius: 18px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: var(--bg);
            color: var(--primary);
            line-height: 1.6;
            min-height: 100vh;
            min-height: 100dvh;
            display: flex;
            flex-direction: column;
            overflow-x: hidden;
        }

        /* ===== HEADER (matches dashboard) ===== */
        .header {
            background: var(--white);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.06);
            padding: 0.75rem 0;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .header-content {
            max-width: 1260px;
            margin: 0 auto;
            padding: 0 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-size: 1.6rem;
            font-weight: 800;
            color: var(--primary);
            letter-spacing: -0.5px;
        }

        .nav-links {
            list-style: none;
            display: flex;
            gap: 0.5rem;
        }

        .nav-links a {
            text-decoration: none;
            color: var(--muted);
            font-weight: 500;
            font-size: 0.85rem;
            padding: 0.5rem 1rem;
            border-radius: 10px;
            transition: all 0.2s;
            cursor: pointer;
        }

        .nav-links a:hover {
            color: var(--primary);
            background: var(--bg);
        }

        .nav-links a.active {
            color: var(--primary);
            background: var(--bg);
            font-weight: 600;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .header-icon {
            width: 38px;
            height: 38px;
            border-radius: 12px;
            border: none;
            background: var(--bg);
            color: var(--secondary);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s;
        }

        .header-icon:hover {
            background: #cbd5e1;
            color: var(--primary);
        }

        .kohert-btn {
            background: linear-gradient(135deg, #14274E 0%, #394867 100%);
            color: white !important;
            padding: 0.5rem 1.25rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 0.9rem;
            text-decoration: none;
            box-shadow: 0 4px 12px rgba(20, 39, 78, 0.2);
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .kohert-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(20, 39, 78, 0.3);
            background: linear-gradient(135deg, #1f3a6e 0%, #4b5d85 100%);
        }

        .header-profile {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #394867 0%, #14274E 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 0.9rem;
            text-decoration: none;
            margin-left: 0.75rem;
            border: 2px solid #F1F6F9;
            box-shadow: 0 2px 8px rgba(20, 39, 78, 0.15);
            transition: all 0.2s;
        }

        .header-profile:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 12px rgba(20, 39, 78, 0.25);
        }

        /* ===== PROFILE PAGE ===== */
        .container {
            max-width: 820px;
            margin: 2rem auto;
            padding: 0 1.5rem;
            flex: 1;
        }

        .profile-header {
            background: linear-gradient(135deg, #14274E 0%, #394867 100%);
            border-radius: 24px;
            padding: 2.5rem;
            text-align: center;
            color: white;
            margin-bottom: 1.5rem;
            box-shadow: 0 12px 40px rgba(20, 39, 78, 0.25);
        }

        .profile-header .avatar {
            width: 90px;
            height: 90px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 2.25rem;
            font-weight: 800;
            backdrop-filter: blur(12px);
            border: 3px solid rgba(255, 255, 255, 0.35);
        }

        .profile-header h1 {
            font-size: 2rem;
            margin: 0 0 0.35rem 0;
            font-weight: 800;
            letter-spacing: -0.5px;
        }

        .profile-header .role {
            font-size: 1rem;
            opacity: 0.85;
            margin: 0;
            font-weight: 500;
        }

        .profile-content {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.25rem;
            margin-bottom: 1.5rem;
        }

        .profile-card {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            box-shadow: var(--card-shadow);
            border: 1px solid rgba(0, 0, 0, 0.04);
        }

        .profile-card h2 {
            font-size: 1.15rem;
            font-weight: 700;
            color: var(--primary);
            margin: 0 0 1.5rem 0;
            display: flex;
            align-items: center;
            gap: 0.6rem;
        }

        .profile-card .icon {
            width: 28px;
            height: 28px;
            background: linear-gradient(135deg, #14274E, #394867);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 13px;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.45rem;
            font-weight: 600;
            color: var(--secondary);
            font-size: 0.88rem;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 14px;
            font-size: 0.95rem;
            font-family: inherit;
            box-sizing: border-box;
            transition: all 0.25s ease;
            background: #fafbfe;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(20, 39, 78, 0.1);
            background: white;
        }

        .form-control:disabled {
            background: #f0f2f7;
            color: var(--muted);
            cursor: not-allowed;
        }

        .btn {
            background: linear-gradient(135deg, #14274E, #394867);
            color: white;
            border: none;
            padding: 0.85rem 1.75rem;
            border-radius: 14px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.25s ease;
            font-size: 0.95rem;
            width: 100%;
            display: block;
            text-align: center;
            text-decoration: none;
            box-shadow: 0 4px 16px rgba(20, 39, 78, 0.3);
            font-family: inherit;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(20, 39, 78, 0.4);
            background: linear-gradient(135deg, #1f3a6e, #4b5d85);
        }

        .btn:active {
            transform: translateY(0);
        }

        .btn-secondary {
            background: #e2e8f0;
            color: var(--secondary);
            box-shadow: none;
        }

        .btn-secondary:hover {
            background: #cbd5e1;
            box-shadow: none;
            transform: translateY(-1px);
        }

        .alert {
            padding: 1rem 1.25rem;
            border-radius: 14px;
            margin-bottom: 1.25rem;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 0.6rem;
        }

        .alert-success {
            background: #ecfdf5;
            color: #065f46;
            border: 1px solid #a7f3d0;
        }

        .alert-danger {
            background: #fef2f2;
            color: #991b1b;
            border: 1px solid #fecaca;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            margin-top: 0.5rem;
        }

        .status-verified {
            background: #ecfdf5;
            color: #059669;
        }

        .status-unverified {
            background: #fffbeb;
            color: #d97706;
        }

        .resend-link {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
            font-size: 0.85rem;
            margin-top: 0.5rem;
            display: inline-block;
            transition: color 0.2s ease;
        }

        .resend-link:hover {
            color: var(--secondary);
            text-decoration: underline;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
            color: var(--primary);
            font-weight: 600;
            padding: 0.75rem 1.25rem;
            border-radius: 14px;
            transition: all 0.25s ease;
            background: white;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.04);
        }

        .back-link:hover {
            background: var(--bg);
            transform: translateX(-3px);
        }

        .settings-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 0.75rem;
            margin-top: 1rem;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(20, 39, 78, 0.5);
            backdrop-filter: blur(4px);
            overflow: auto;
        }

        .modal-content {
            background-color: #fefefe;
            margin: 10% auto;
            padding: 2rem;
            border: none;
            width: 90%;
            max-width: 500px;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
            position: relative;
            animation: modalSlideIn 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        }

        .modal-content h2 {
            margin: 0;
            color: var(--primary);
        }

        @keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .close-modal {
            color: var(--muted);
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
            position: absolute;
            top: 15px;
            right: 20px;
            line-height: 1;
        }

        .close-modal:hover {
            color: var(--primary);
        }

        /* Checkbox Switch */
        .switch-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1rem;
            padding: 12px 14px;
            background: var(--bg);
            border-radius: 12px;
        }

        .switch-label {
            font-weight: 500;
            color: var(--secondary);
            font-size: 0.9rem;
        }

        .switch {
            position: relative;
            display: inline-block;
            width: 50px;
            height: 26px;
        }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 26px;
        }

        .slider:before {
            position: absolute;
            content: "";
            height: 18px;
            width: 18px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

        input:checked+.slider {
            background-color: var(--primary);
        }

        input:checked+.slider:before {
            transform: translateX(24px);
        }

        .inline-error-message {
            color: #ef4444;
            font-size: 0.85rem;
            margin-top: 8px;
            padding: 8px 12px;
            background: #fef2f2;
            border-radius: 8px;
            border: 1px solid #fecaca;
            display: none;
        }

        /* === HAMBURGER MENU === */
        .hamburger-btn {
            display: none;
            width: 38px;
            height: 38px;
            border-radius: 10px;
            background: var(--bg);
            border: none;
            color: var(--secondary);
            cursor: pointer;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .hamburger-btn:hover {
            background: #e2e8f0;
            color: var(--primary);
        }

        .mobile-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(20, 39, 78, 0.4);
            backdrop-filter: blur(2px);
            z-index: 998;
        }

        .mobile-overlay.open {
            display: block;
        }

        .mobile-nav {
            position: fixed;
            top: 0;
            right: -65%;
            width: 65%;
            max-width: 300px;
            height: 100%;
            background: var(--white);
            z-index: 999;
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
            box-shadow: -4px 0 24px rgba(20, 39, 78, 0.15);
            transition: right 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            overflow-y: auto;
        }

        .mobile-nav.open {
            right: 0;
        }

        .mobile-nav-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.25rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px solid rgba(155, 164, 180, 0.15);
        }

        .mobile-nav-header .logo {
            font-size: 1.3rem;
        }

        .mobile-nav-close {
            width: 34px;
            height: 34px;
            border-radius: 10px;
            background: var(--bg);
            border: none;
            color: var(--secondary);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .mobile-nav-close:hover {
            background: #fee2e2;
            color: #ef4444;
        }

        .mobile-nav a {
            text-decoration: none;
            color: var(--secondary);
            font-weight: 500;
            font-size: 0.95rem;
            padding: 0.75rem 1rem;
            border-radius: 12px;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            gap: 0.6rem;
        }

        .mobile-nav a:hover,
        .mobile-nav a.active {
            color: var(--primary);
            background: var(--bg);
            font-weight: 600;
        }

        .mobile-nav-divider {
            height: 1px;
            background: rgba(155, 164, 180, 0.15);
            margin: 0.5rem 0;
        }

        .mobile-nav-bottom {
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid rgba(155, 164, 180, 0.15);
        }

        .mobile-nav .drawer-kohert {
            background: linear-gradient(135deg, #14274E 0%, #394867 100%) !important;
            color: white !important;
            padding: 0.65rem 1.25rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 0.9rem;
            text-decoration: none;
            box-shadow: 0 4px 12px rgba(20, 39, 78, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .mobile-nav .drawer-kohert:hover {
            background: linear-gradient(135deg, #1f3a6e 0%, #4b5d85 100%) !important;
        }

        .notification-toast {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%) translateY(100px);
            background: var(--primary);
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 12px;
            font-size: 0.85rem;
            font-weight: 500;
            z-index: 1001;
            box-shadow: 0 4px 20px rgba(20, 39, 78, 0.3);
            transition: transform 0.3s ease;
            white-space: nowrap;
        }

        .notification-toast.show {
            transform: translateX(-50%) translateY(0);
        }

        .mobile-kohert {
            display: none;
        }

        @media (max-width: 768px) {
            .header-content {
                flex-direction: row;
                flex-wrap: nowrap;
            }

            .header-content nav {
                display: none;
            }

            .header-right .kohert-btn:not(.mobile-kohert),
            .header-right .header-profile,
            .header-right .header-icon {
                display: none;
            }

            .hamburger-btn {
                display: flex;
            }

            .header-right .mobile-kohert {
                display: inline-flex;
            }

            .container {
                margin: 1rem auto;
            }

            .profile-header {
                padding: 2rem 1.25rem;
                border-radius: 20px;
            }

            .profile-header h1 {
                font-size: 1.6rem;
            }

            .profile-header .avatar {
                width: 72px;
                height: 72px;
                font-size: 1.75rem;
            }

            .settings-grid {
                grid-template-columns: 1fr;
            }

            .profile-card {
                padding: 1.5rem;
                border-radius: 16px;
            }
        }
    </style>
</head>

<body>
    <!-- Header Section -->
    <header class="header">
        <div class="header-content">
            <div class="logo">Quizzie</div>
            <nav>
                <ul class="nav-links">
                    <li><a href="/homeStudent">Dashboard</a></li>
                    <li><a href="/myClasses">My Classes</a></li>
                    <li><a class="active">My Profile</a></li>
                </ul>
            </nav>
            <div class="header-right">
                <a href="/comingSoon" class="kohert-btn" title="Kohert">Kohert</a>
                <a href="/comingSoon" class="kohert-btn mobile-kohert" title="Kohert">Kohert</a>
                <button class="header-icon" title="Notifications"><i data-lucide="bell"
                        style="width:18px;height:18px"></i></button>
                <button class="hamburger-btn" onclick="toggleMobileNav()" title="Menu" id="hamburgerBtn">
                    <i data-lucide="menu" style="width:20px;height:20px"></i>
                </button>
                <a href="/profileStudent" class="header-profile" title="My Profile">
                    <span class="profile-initials">SK</span>
                </a>
            </div>
        </div>
    </header>

    <!-- Mobile Overlay -->
    <div class="mobile-overlay" id="mobileOverlay" onclick="closeMobileNav()"></div>

    <!-- Mobile Side Drawer -->
    <div class="mobile-nav" id="mobileNav">
        <div class="mobile-nav-header">
            <div class="logo">Quizzie</div>
            <button class="mobile-nav-close" onclick="closeMobileNav()">
                <i data-lucide="x" style="width:18px;height:18px"></i>
            </button>
        </div>
        <a href="/homeStudent"><i data-lucide="layout-dashboard" style="width:18px;height:18px"></i> Dashboard</a>
        <a href="/myClasses"><i data-lucide="book-open" style="width:18px;height:18px"></i> My Classes</a>
        <a href="/profileStudent" class="active"><i data-lucide="user" style="width:18px;height:18px"></i> My
            Profile</a>
        <div class="mobile-nav-divider"></div>
        <a href="/notifications"><i data-lucide="bell" style="width:18px;height:18px"></i> Notifications</a>
    </div>

    <div class="container">
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="avatar">{{initials}}</div>
            <h1>{{userName}}</h1>
            <p class="role">{{userType}}</p>
        </div>

        <!-- Success/Error Messages -->
        {{#if message}}
        <div class="alert alert-success">
            <span>‚úÖ</span>
            {{message}}
        </div>
        {{/if}}

        {{#if error}}
        <div class="alert alert-danger">
            <span>‚ùå</span>
            {{error}}
        </div>
        {{/if}}

        <!-- Profile Content -->
        <div class="profile-content">
            <!-- Personal Information -->
            <div class="profile-card">
                <h2>
                    <span class="icon"><i data-lucide="user" style="width:14px;height:14px"></i></span>
                    Personal Information
                </h2>

                <form action="/profileStudent" method="POST">
                    <div class="form-group">
                        <label for="enrollmentNo" class="form-label">Enrollment No.</label>
                        <input type="text" id="enrollmentNo" class="form-control" value="{{user.enrollment}}" readonly
                            disabled>
                        <small style="color: var(--muted); font-size: 0.85rem; margin-top: 5px; display: block;">
                            Your enrollment number cannot be changed.
                        </small>
                    </div>

                    <div class="form-group">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" id="email" name="email" class="form-control" value="{{user.email}}"
                            required>

                        {{#if user.email}}
                        {{#if user.isVerified}}
                        <div class="status-badge status-verified">
                            <span>‚úÖ</span>
                            Email Verified
                        </div>
                        {{else}}
                        <div class="status-badge status-unverified">
                            <span>‚ö†Ô∏è</span>
                            Email Not Verified
                        </div>
                        <a href="#" onclick="resendVerification()" class="resend-link">
                            Resend verification email
                        </a>
                        {{/if}}
                        {{else}}
                        <small style="color: var(--muted); font-size: 0.85rem; margin-top: 5px; display: block;">
                            Enter your email address for account recovery
                        </small>
                        {{/if}}

                        <div class="inline-error-message" id="emailErrorMessage"></div>
                    </div>

                    <div class="form-group">
                        <label for="firstName" class="form-label">First Name</label>
                        <input type="text" id="firstName" name="firstName" class="form-control"
                            value="{{user.firstName}}" placeholder="Enter your first name">
                    </div>

                    <div class="form-group">
                        <label for="lastName" class="form-label">Last Name</label>
                        <input type="text" id="lastName" name="lastName" class="form-control" value="{{user.lastName}}"
                            placeholder="Enter your last name">
                    </div>

                    <button type="submit" class="btn">Update Profile</button>
                </form>
            </div>

            <!-- Account Settings -->
            <div class="profile-card">
                <h2>
                    <span class="icon"><i data-lucide="settings" style="width:14px;height:14px"></i></span>
                    Account Settings
                </h2>

                <div class="settings-grid">
                    <button class="btn btn-secondary" onclick="openModal('changePasswordModal')">
                        <i data-lucide="lock"
                            style="width:16px;height:16px;display:inline;vertical-align:middle;margin-right:4px"></i>
                        Change Password
                    </button>
                    <button class="btn btn-secondary" onclick="openModal('notificationModal')">
                        <i data-lucide="bell"
                            style="width:16px;height:16px;display:inline;vertical-align:middle;margin-right:4px"></i>
                        Notification Settings
                    </button>
                    <button class="btn btn-secondary" onclick="window.location.href='/student/download-data'">
                        <i data-lucide="download"
                            style="width:16px;height:16px;display:inline;vertical-align:middle;margin-right:4px"></i>
                        Download Data
                    </button>
                </div>
            </div>
        </div>

        <!-- Back to Dashboard -->
        <div style="margin-top: 30px; text-align: center;">
            <a href="/homeStudent" class="back-link">
                <span>‚Üê</span>
                Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Change Password Modal -->
    <div id="changePasswordModal" class="modal">
        <div class="modal-content">
            <span class="close-modal" onclick="closeModal('changePasswordModal')">&times;</span>
            <h2><i data-lucide="lock"
                    style="width:22px;height:22px;display:inline;vertical-align:middle;margin-right:6px"></i> Change
                Password</h2>
            <form action="/student/change-password" method="POST" style="margin-top: 20px;">
                <div class="form-group">
                    <label for="oldPassword" class="form-label">Current Password</label>
                    <input type="password" id="oldPassword" name="oldPassword" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="newPassword" class="form-label">New Password</label>
                    <input type="password" id="newPassword" name="newPassword" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="confirmNewPassword" class="form-label">Confirm New Password</label>
                    <input type="password" id="confirmNewPassword" name="confirmNewPassword" class="form-control"
                        required>
                </div>
                <button type="submit" class="btn">Update Password</button>
            </form>
        </div>
    </div>

    <!-- Notification Settings Modal -->
    <div id="notificationModal" class="modal">
        <div class="modal-content">
            <span class="close-modal" onclick="closeModal('notificationModal')">&times;</span>
            <h2><i data-lucide="bell"
                    style="width:22px;height:22px;display:inline;vertical-align:middle;margin-right:6px"></i>
                Notification Settings</h2>
            <form action="/student/notification-settings" method="POST" style="margin-top: 20px;">
                <div class="switch-container">
                    <span class="switch-label">Email Notifications</span>
                    <label class="switch">
                        <input type="checkbox" name="emailNotifications" checked>
                        <span class="slider"></span>
                    </label>
                </div>
                <div class="switch-container">
                    <span class="switch-label">Marketing & Updates</span>
                    <label class="switch">
                        <input type="checkbox" name="marketingNotifications">
                        <span class="slider"></span>
                    </label>
                </div>
                <button type="submit" class="btn">Save Preferences</button>
            </form>
        </div>
    </div>

    <script>
        const studentName = '{{{userName}}}';
        document.addEventListener('DOMContentLoaded', function () {
            lucide.createIcons();
            setProfileInitials();

            const userName = "{{userName}}";

            if (userName) {
                const initials = userName.split(' ').map(name => name.charAt(0)).join('').toUpperCase();
                const avatars = document.querySelectorAll('.avatar');
                avatars.forEach(avatar => {
                    avatar.textContent = initials.substring(0, 2);
                });
            }

            // URL Param handling for messages
            const urlParams = new URLSearchParams(window.location.search);
            const successMessage = urlParams.get('message');
            const errorMessage = urlParams.get('error');

            if (successMessage) {
                showSuccess(decodeURIComponent(successMessage));
                urlParams.delete('message');
                window.history.replaceState({}, document.title, window.location.pathname);
            }

            if (errorMessage) {
                const emailErrorDiv = document.getElementById('emailErrorMessage');
                if (emailErrorDiv) {
                    emailErrorDiv.textContent = decodeURIComponent(errorMessage);
                    emailErrorDiv.style.display = 'block';
                }
                showError(decodeURIComponent(errorMessage));
                urlParams.delete('error');
                window.history.replaceState({}, document.title, window.location.pathname);
            }
        });

        function setProfileInitials() {
            const name = studentName || 'Student';
            const initials = name.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase();
            document.querySelectorAll('.profile-initials').forEach(el => el.textContent = initials);
        }

        function openModal(modalId) {
            document.getElementById(modalId).style.display = "block";
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = "none";
        }

        // Mobile sidebar toggle
        function toggleMobileNav() {
            document.getElementById('mobileNav').classList.add('open');
            document.getElementById('mobileOverlay').classList.add('open');
            document.body.style.overflow = 'hidden';
            lucide.createIcons();
        }

        function closeMobileNav() {
            document.getElementById('mobileNav').classList.remove('open');
            document.getElementById('mobileOverlay').classList.remove('open');
            document.body.style.overflow = '';
        }

        function showNotificationToast() {
            closeMobileNav();
            let toast = document.getElementById('notifToast');
            if (!toast) {
                toast = document.createElement('div');
                toast.id = 'notifToast';
                toast.className = 'notification-toast';
                toast.textContent = 'üîî Notifications coming soon!';
                document.body.appendChild(toast);
            }
            setTimeout(() => toast.classList.add('show'), 50);
            setTimeout(() => {
                toast.classList.remove('show');
            }, 2500);
        }

        // Close modal if clicked outside
        window.onclick = function (event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = "none";
            }
        }

        // Enhanced success message display
        function showSuccess(message) {
            document.querySelectorAll('.floating-alert').forEach(alert => alert.remove());
            const alertHTML = `
                <div class="floating-alert alert alert-success" style="position: fixed; top: 20px; right: 20px; z-index: 2000; max-width: 400px; box-shadow: 0 8px 32px rgba(0,0,0,0.1);">
                    <span>‚úÖ</span>
                    <span>${message}</span>
                    <button onclick="this.parentElement.remove()" style="background: none; border: none; font-size: 18px; cursor: pointer; color: inherit; margin-left: auto;">&times;</button>
                </div>
            `;
            document.body.insertAdjacentHTML('afterbegin', alertHTML);
            setTimeout(() => {
                const alert = document.querySelector('.floating-alert');
                if (alert) alert.remove();
            }, 5000);
        }

        // Enhanced error message display
        function showError(message) {
            document.querySelectorAll('.floating-alert').forEach(alert => alert.remove());
            const alertHTML = `
                <div class="floating-alert alert alert-danger" style="position: fixed; top: 20px; right: 20px; z-index: 2000; max-width: 400px; box-shadow: 0 8px 32px rgba(0,0,0,0.1);">
                    <span>‚ùå</span>
                    <span>${message}</span>
                    <button onclick="this.parentElement.remove()" style="background: none; border: none; font-size: 18px; cursor: pointer; color: inherit; margin-left: auto;">&times;</button>
                </div>
            `;
            document.body.insertAdjacentHTML('afterbegin', alertHTML);
            setTimeout(() => {
                const alert = document.querySelector('.floating-alert');
                if (alert) alert.remove();
            }, 8000);
        }

        // Resend verification email
        async function resendVerification() {
            try {
                showSuccess('Sending verification email...');

                const response = await fetch('/resend-verification-email', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();

                if (data.success) {
                    showSuccess(data.message);
                } else {
                    showError('Error: ' + data.message);
                }
            } catch (error) {
                console.error('Failed to resend verification email:', error);
                showError('Network error. Please try again.');
            }
            return false;
        }
    </script>
</body>

</html>