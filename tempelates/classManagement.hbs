                if (data.success) {
                    console.log('‚úÖ Quizzes loaded:', data.quizzes.length);
                    displayQuizzes(data.quizzes);
                } else {
                    console.error('‚ùå Failed to load quizzes:', data.message);
                    showError('Failed to load quizzes: ' + data.message);
                }
            } catch (error) {
                console.error('‚ùå Error loading quizzes:', error);
                showError('Network error while loading quizzes.');
            }
